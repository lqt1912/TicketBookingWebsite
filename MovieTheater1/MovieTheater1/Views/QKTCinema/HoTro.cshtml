	ViewBag.Title = "HoTro";
	Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}


<body>
<br />
<div class="container">
    <div class="row">
        <div class=" ho-tro-box col-md-8 col-sm-8 col-12 ">
            <div class="contact-header">
                Bạn có gì muốn nhắn nhủ  TQKCinema?

                <div class=" d-flex justify-content-around flex-wrap feedback-contact">
                    <div class="feedback-contact-item">
                        <i class="fa fa-envelope"></i><a href="mailto:thanglequoc1912@gmail.com">thanglequoc1912@gmail.com</a>
                    </div>
                    <div class="feedback-contact-item">
                        <i class="fa fa-phone"></i>	<a href="mailto:19002224">0857394951</a>
                    </div>
                </div>
            </div>
            
            @using (Html.BeginForm("EmailHoTro","NguoiDung", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-12">
                        <div class="form-group">

                            <input name="sender" type="text" class="form-control" placeholder="Họ và tên ">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-12">
                        <div class="form-group" style="">
                            <input name="email" type="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-12">
                        <div class="form-group" style="">
                            <input name="sdt" type="text" class="form-control" placeholder="Số điện thoại ">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <textarea id="HoTroMessage" name="message" rows="4" class="form-control col-md-12 col-sm-12 col-12" placeholder="Nội dung "></textarea>
               
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-feedback" type="submit"> Gửi </button>
                </div>
            }
          
        </div>

        <div class="col-md-4 col-sm-4 col-12 d-none d-sm-block pl-2" style="background: rgb(245, 245, 245); border: 1px solid gray;">
            <div class="text-center pt-2">ĐẶT VÉ NHANH  </div>
            @Html.Action("_Partial_DatVeNhanh", "QKTCinema")

        </div>
    </div>

    <div class="	d-none d-sm-block">
        <br />
        <div class="row d-flex justify-content-start ">
            <div>
                <h3> Phim trong tháng </h3>
            </div>
        </div>
        <br />
        <div class="row ">
            @Html.Action("_PartialPhim_HoTro", "QKTCinema")
        </div>
    </div>

</div>
</body>



