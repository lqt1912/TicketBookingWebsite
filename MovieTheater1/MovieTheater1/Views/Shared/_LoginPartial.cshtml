@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{

     
	<a href=@Url.Action("Register", "Account") class="btn btn-primary btn-light btn-login" style="border-radius: 20px;"><span class="fa fa-download"></span> Đăng kí</a>

	<a href=@Url.Action("Login", "Account") class="btn btn-primary btn-light btn-login" style="border-radius: 20px;"><span class="fa fa-download"></span> Đăng nhập</a>
}
