<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/jquery.min.js"></script>
    <script src="~/Content/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Content/popper.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>

    <link href="~/Content/Footer.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/image-overlay.css" rel="stylesheet" />

</head>
<body>

    <div class="container-fluid p-0 m-0" style="background-color: rgb(247, 249, 250)">

        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-4">
                <img src="~/Content/logo (2).png" class="image w-100" />
            </div>
            <div class=" d-flex justify-content-around  align-items-center flex-wrap col-md-8 col-sm-8 col-xs-8 ">
                <div class=" d-none d-xl-block d-lg-block">
                    <form class="form-inline my-2 my-lg-0 ">

                        <div class="input-group" style="border-radius:0px;  border: 1px solid gray;">
                            <button class="btn btn-search my-2 my-sm-0 "
                                    type="submit" style="border:none;">
                                <i class="fa fa-search"></i>

                            </button>

                            <input class="form-control my-2 my-sm-0" type="text" placeholder="Tìm tên phim, diễn viên..."
                                   aria-label="Search" style="border: none;  ">

                        </div>
                    </form>
                </div>
                <div>

                    @Html.Partial("_LoginPartial")

                </div>

            </div>
        </div>
        <nav class="navbar navbar-expand-lg   " style="width: 100%; background-color:black;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars bg-light"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto mx-auto nav-text">
                    <li class="nav-item d-xl-none d-lg-none ">
                        <form class="form-inline my-2 my-lg-0 ">

                            <div class="input-group" style="border-radius:15px; ">
                                <button class="btn btn-outline-success my-2 my-sm-0 "
                                        type="submit" style="border:none;">
                                    <i class="fa fa-search"></i>

                                </button>

                                <input class="form-control my-2 my-sm-0" type="text" placeholder="Search" size="1000"
                                       aria-label="Search" style="border: none; border-radius:0px 15px 15px 0px; ">

                            </div>
                        </form>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link nav-text" href=@Url.Action("TrangChu", "QKTCinema")>
                            TRANG CHỦ <span class="sr-only">(current)</span>
                        </a>
                    </li>

                    <li class="nav-item dropdown ">
                        <a class="nav-link nav-text dropdown-toggle " href="#" id="navbardrop" data-toggle="dropdown">
                            PHIM
                        </a>
                        <ul class="dropdown-menu bg-black ">
                            <li>
                                <a href=@Url.Action("PhimDangChieu","QKTCinema") class="nav-link nav-dropdown-text">
                                    Phim đang chiếu
                                </a>
                            </li>
                            <li> <a href=@Url.Action("PhimSapChieu","QKTCinema" ) class="nav-link nav-dropdown-text"> Phim sắp chiếu</a></li>
                        </ul>
                    </li>
                    <li class="nav-item nav-text">
                        <a class="nav-link nav-text " href=@Url.Action("SuKien","QKTCinema")>SỰ KIỆN</a>
                    </li>
                    <li class="nav-item nav-text">
                        <a class="nav-link nav-text" href=@Url.Action("RapGiaVe","QKTCinema")>
                            RẠP/GIÁ VÉ
                        </a>
                    </li>
                    <li class="nav-item nav-text">
                        <a class="nav-link nav-text" href=@Url.Action("HoTro","QKTCinema")>
                            HỖ TRỢ
                        </a>
                    </li>

                    <li class="nav-item nav-text">
                        <a class="nav-link nav-text" href=@Url.Action("ThanhVien","QKTCinema")>
                            THÀNH VIÊN
                        </a>
                    </li>


                </ul>

            </div>
        </nav>



    </div>
    <div class="p-3">   @RenderBody()</div>
    <section id="footer" class="">
        <div class="container-fluid bg-dark ">
            <br />


            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 mt-2 mt-sm-5">
                    <ul class="list-unstyled list-inline social text-center">
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-instagram"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-google-plus"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();" target="_blank"><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <hr />
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 mt-2 mt-sm-2 text-center text-white">
                    <p>
                        <u>
                            <a href="#">
                                Công Ty Cổ Phần Phim QTK
                            </a>
                        </u> quán trà sữa cổng sau Đại học Thể dục thể thao TPHCM
                    </p>

                    <p class="h6">&copy Đã đăng ký bộ Cờ Tờ.<a class="text-green ml-2" href="#" target="_blank">Clone by LQT</a></p>
                </div>
            </div>
        </div>
    </section>


    <script src="~/Content/selectFilter.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="~/Content/QTKCinema.js"></script>
</body>


</html>
