@{
    ViewBag.Title = "ThemKhuyenMai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thêm khuyến mãi mới
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="form-group">
                    <label>Tên khuyễn mãi</label>
                    <input class="form-control" placeholder="Enter text" id="tenkhuyenmai">
                </div>
                <div class="form-group">
                    <label>Ngày bắt đầu &nbsp</label>
                    <input type="date" class="form-control" id="ngaybatdau" />

                </div>
                <div class="form-group">
                    <label>Ngày kết thúc  &nbsp</label>
                    <input type="date" class="form-control" id="ngayketthuc" />

                </div>
                <div class="form-group">
                    <label>Giảm giá</label>
                    <input class="form-control" placeholder="Enter text" type="number" id="giamgia">
                </div>
                <div class="form-group">
                    <label>Nội dung</label>
                    <textarea class="form-control" rows="3" id="noidung"></textarea>
                    <script>
                        CKEDITOR.replace('noidung');
                    </script>
                </div>
                <div class="form-group">
                    <label>Ảnh bìa</label>
                    <input type="file">
                </div>
                <div class="form-group">
                    <label>Ghi chú</label>
                    <textarea class="form-control" rows="3" id="ghichu"></textarea>
                    <script>
                        CKEDITOR.replace('ghichu');
                    </script>
                </div>
            </div>


        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm("ThemKhuyenMai", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Ảnh bìa 300x450</label>
    <input type="file" name="file" required><br />
    <input id="txttenkhuyenmai" name="TenKhuyenMai" type="hidden"/>
    <input id="txtngaybatdau" name="NgayBatDau" type="hidden"/>
    <input id="txtngayketthuc" name="NgayKetThuc" type="hidden"/>
    <input id="txtgiamgia" name="GiamGia" type="hidden"/>
    <input id="txtnoidung" name="NoiDung" type="hidden"/>
    <input id="txtghichu" name="GhiChu" type="hidden"/>

    <button type="submit" class="btn btn-primary btn-lg btn-block" onclick="myFunc()">Thêm</button>
}
<script>
    function SelectItem1() {




    }
    function myFunc() {
        document.getElementById("txttenkhuyenmai").value = document.getElementById("tenkhuyenmai").value;
        document.getElementById("txtngaybatdau").value = document.getElementById("ngaybatdau").value;
        document.getElementById("txtngayketthuc").value = document.getElementById("ngayketthuc").value;
        document.getElementById("txtgiamgia").value = document.getElementById("giamgia").value;
    }
    window.onload = function () {
        CKEDITOR.instances.noidung.on('blur', function () {
            document.getElementById("txtnoidung").value = CKEDITOR.instances.noidung.getData();

        });
        CKEDITOR.instances.ghichu.on('blur', function () {
            document.getElementById("txtghichu").value = CKEDITOR.instances.ghichu.getData();

        });

    };
</script>