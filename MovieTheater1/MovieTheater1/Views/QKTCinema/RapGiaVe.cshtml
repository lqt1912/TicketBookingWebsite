
@{
	ViewBag.Title = "RapGiaVe";
	Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
@using MovieTheater1.Models;
<body>

<script src="~/Content/selectFilter.min.js"></script>
	<div class="row ">
		<div class="col-md-6 col-12">


			<div class="row">
				<div class="col-12"> <h3> AAAA</h3> </div>

				<div class="col-md-6 col-sm-6 col-12 pb-5">
					<select id="selectbasic" name="selectbasic" data-target ="secondList" class="selectFilter form-control">
						<option value =" -1"> Chọn rạp </option>
						@foreach (var item in DataAccess.GetRaps())
						{
							<option data-ref="@item.MARAP"> @item.TENRAP</option>
						}
						
					</select>
				</div>
				
				<div class="col-md-6 col-sm-6 col-12 pb-5">
					<select data-target="thirdList"  class="secondList selectFilter form-control">
						<option value=" -1"> Chọn ngày </option>
						@foreach (var rap in DataAccess.GetRaps())
						{
							foreach (var ttc in DataAccess.GetThongtinchieu())
							{
								if (ttc.MARAP == rap.MARAP)
								{
									<option data-belong="@ttc.MARAP">@ttc.NGAYCHIEU.ToString().Substring(0,9)</option>
								}
							}
						}

					</select>
				</div>
			</div>
			
			

			<list class="thirdList selectFilter"  >
				@foreach (var phim in DataAccess.GetPhims())
				{
					foreach (var ttc in DataAccess.GetThongtinchieu() )
					{
						if (ttc.MAPHIM == phim.MAPHIM)
						{
							<div class=" row p-2">
								<div class="col-4 d-flex justify-content-center align-items-center">
									<img src="~/Content/Images/300x450xphim/BACKIMTHANG_300450.jpg" class="d-block w-100 pl-2" />
								</div>
								<div class="col-8">
									<p style="font-size: 18px;">@phim.TENPHIM</p>

									<div class=" d-flex ">
										<div style="font-size: 14px;"> <i class="fas fa-calendar-alt p-2"></i> 2019</div>
										<div style="font-size: 14px;"><i class="far fa-clock p-2 "></i> 128 phút </div>
									</div>

									<div class="d-flex pl-2">
										<button class="btn-thoi-gian-chieu1"> 15:15</button>
										<button class="btn-thoi-gian-chieu1">15:30</button>
										<button class="btn-thoi-gian-chieu1"> 15:35</button>

									</div>
								</div>
							</div>
						}
					}
				}
			</list>
		
			
			
		</div>

		<div class="col-md-6 col-12">
			<div>
				<h3 class="p-3"> Giá vé 2D </h3>
				<img src="~/Content/banggiave-nguyendu-082019-2d_1567586356540.jpg" class=" d-block w-100 p-lg-5" />

				<h3 class="p-3"> Giá vé 3D </h3>

				<img src="~/Content/banggiave-082019-3d_1567136002205.jpg" class="d-block w-100 p-lg-5" />



				<h3 class="p-3"> Thông tin chi tiết </h3>

				<div>
					<iframe class="p-lg-5" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3938.7318442356013!2d105.15271071478776!3d9.178644193417188!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a149a0d61b6b83%3A0x236a8af355f80d04!2sCo.opmart+C%C3%A0+Mau!5e0!3m2!1sen!2s!4v1495428317298" width="100%" height="300" frameborder="0" style="border: 0" allowfullscreen=""></iframe>
				</div>
			</div>

		</div>
	</div>
</body>

