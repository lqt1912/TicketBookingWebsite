					<li class="nav-item d-xl-none d-lg-none ">
						<form class="form-inline my-2 my-lg-0 ">

							<div class="input-group" style="border-radius:15px; ">
								<button class="btn btn-outline-success my-2 my-sm-0 "
										type="submit" style="border:none;">
									<i class="fa fa-search"></i>

								</button>

								<input class="form-control my-2 my-sm-0" type="text" placeholder="Search" size="1000"
									   aria-label="Search" style="border: none; border-radius:0px 15px 15px 0px; ">

							</div>
						</form>
					</li>
					<li class="nav-item ">
						<a class="nav-link nav-text" href=@Url.Action("TrangChu", "QKTCinema")>
							TRANG CHỦ <span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link nav-text" href=@Url.Action("MuaVe", "QKTCinema")>
							MUA VÉ
						</a>
					</li>
					<li class="nav-item dropdown ">
						<a class="nav-link nav-text dropdown-toggle " href="#" id="navbardrop" data-toggle="dropdown">
							PHIM
						</a>


						<ul class="dropdown-menu bg-black ">
							<li>
								<a href=@Url.Action("PhimDangChieu","QKTCinema") class="nav-link nav-dropdown-text">
									Phim đang chiếu
								</a>
							</li>

							<li> <a href=@Url.Action("PhimSapChieu","QKTCinema" ) class="nav-link nav-dropdown-text"> Phim sắp chiếu</a></li>

