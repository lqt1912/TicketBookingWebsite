
@using MovieTheater1.Models
@model List<VOUCHER>
@{
    ViewBag.Title = "QuanLyKhuyenMai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý khuyến mãi
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên khuyến mãi</th>
                                <th>Giảm giá</th>
                                <th>Bắt đầu</th>
                                <th>Kết thúc</th>
                                <th>Nội dung</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.MAVOUCHER</td>
                                    <td>@item.TENVOUCHER</td>
                                    <td>@item.GIAMGIA</td>
                                    <td>@item.NGAYBD</td>
                                    <td>@item.NGAYKT</td>
                                    <td>@item.NOIDUNG</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>