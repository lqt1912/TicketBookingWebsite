@using MovieTheater1.Models
@model List<PHONG>
@{
    ViewBag.Title = "QuanLyPhong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý phòng
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                        <thead>
                            <tr>
                                <th>Mã phòng</th>
                                <th>Mã rạp</th>
                                <th>Mã loại phòng</th>
                                <th>Số chổ</th>
                                <th>Tên phòng</th>

                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.MaPhong</td>
                                    <td>@item.MARAP</td>
                                    <td>@item.MaLoaiPhong</td>
                                    <td>@item.SoCho</td>
                                    <td>@item.TenPhong</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

