@using System.Globalization
@using MovieTheater1.Models
@model List<VOUCHER>
@{
	ViewBag.Title = "SuKien";
	Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<body>

<div class="container">
	<br/>
	<div class="row">
		<div class=" col-md-8 col-sm-8 col-12">

			<div class="row d-flex justify-content-start ">

				<h3> Khuyến mãi mới </h3>
			</div>

			<div class="row">
				@foreach (var item in Model)
				{
					<div class="col-md-4 col-sm-6 col-6" style="padding-top: 1em;">

						<div class="container-for-overlay">
							<a href="#">
								<img class="image w-100 " src="@Url.Content("~/Content/Images/300x450xkhuyenmai/" + item.ANHDAIDIEN )" img />
							</a>

							<a href="#">
								<div class="middle  d-none d-xl-block d-lg-block">

									<div class="text-inside ">
										<p class="voucher-title"> @item.TENVOUCHER</p>
										@Html.Raw(@item.GHICHU)
									</div>

									<div class="row d-flex justify-content-center align-items-center ">
										<button href="#" class="btn btn-chitiet "> CHI TIẾT</button>
									</div>

								</div>
							</a>
						</div>
					</div>
				}
			</div>
		</div>
		<div class="col-md-4 col-sm-4 col-12">
			<br/>
			<div class=" d-none d-sm-block">
				<table cellpadding="10" style="background-color: rgb(228, 228, 228); width: 100%;">
					<tr>
						<td style="background-color: rgb(242, 107, 56); color: white; font-weight: bold;">MUA VÉ NHANH </td>
						<td>
							&nbsp;
						</td>
					</tr>
					<tr>
						<td colspan="2">
						<select id="selectbasic" name="selectbasic" class="form-control">
							<option default> Chọn phim </option>
							<option value="1">Option one</option>
							<option value="2">Option two</option>
						</select>
					</tr>
					<tr>
						<td colspan="2">
							<select id="selectbasic" name="selectbasic" class="form-control">
								<option default> Chọn rạp </option>
								<option value="1">Option one</option>
								<option value="2">Option two</option>
							</select>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<select id="selectbasic" name="selectbasic" class="form-control">
								<option default> Chọn ngày </option>
								<option value="1">Option one</option>
								<option value="2">Option two</option>
							</select>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<select id="selectbasic" name="selectbasic" class="form-control">
								<option default> Chọn suất </option>
								<option value="1">Option one</option>
								<option value="2">Option two</option>
							</select>
						</td>
					</tr>
					<tr>
						<td style="">
						</td>
						<td align="right">
							<button class="btn btn-feedback">
								MUA VÉ
							</button>
						</td>
					</tr>
				</table>
			</div>
			<br/>

			<div class="d-none d-sm-block">
				<h3>
					Phim đang chiếu
				</h3>

				<div class="row">
					@Html.Action("_PartialPhim_KhuyenMai", "QKTCinema")
				</div>

				<div class="row d-flex justify-content-end align-items-end">
					<div class="col-auto"><button class="btn btn-xemthem">Xem thêm <i class="fas fa-arrow-right"></i></button></div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
