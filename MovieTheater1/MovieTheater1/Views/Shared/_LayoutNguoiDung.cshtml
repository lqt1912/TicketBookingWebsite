					</li>
					<li class="nav-item nav-text">
						<a class="nav-link nav-text" href=@Url.Action("HoTro","QKTCinema")>
							HỖ TRỢ
						</a>
					</li>

					<li class="nav-item nav-text">
						<a class="nav-link nav-text" href=@Url.Action("ThanhVien","QKTCinema")>
							THÀNH VIÊN
						</a>
					</li>


				</ul>

			</div>
		</nav>


		@RenderBody()

